class Yazilimci():
    def __init__(self, ad, soyad, maas, bildiyi_dil):
        self.ad = ad
        self.soyad = soyad
        self.maas = maas
        self.bildiyi_dil = bildiyi_dil

    def melumatlarigoster(self):
        print("""
        Adi: {}
        Soyadi: {}
        Maasi: {}
        Bildiyi dil: {}

        """.format(self.ad, self.soyad, self.maas, self.bildiyi_dil))

    def maaselave(self, maas_elave):
        print("maas elvae olundu")
        self.maas+= maas_elave

orxan=Yazilimci("orxan","qasimov",300,"python")

orxan.melumatlarigoster()

orxan.maaselave(300)
orxan.melumatlarigoster()
